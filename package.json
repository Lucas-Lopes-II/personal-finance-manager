{
  "name": "personal-finance-manager",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start:prod": "node dist/main",
    "up": "docker compose up -d",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "npx dotenv-cli -e .env.local -- nest start --watch",
    "dev": "npx dotenv-cli -e .env.local -- nest start --watch",
    "start:debug": "npx dotenv-cli -e .env.local -- nest start --debug --watch",
    "test": "npx dotenv-cli -e .env.test -- jest --passWithNoTests --runInBand --no-cache",
    "test:w": "npx dotenv-cli -e .env.test -- jest --watch",
    "test:cov": "npx dotenv-cli -e .env.test -- jest --coverage",
    "test:debug": "npx dotenv-cli -e .env.test -- node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:staged": "npx dotenv-cli -e .env.test -- jest --passWithNoTests --onlyChanged",
    "test:unit": "npx dotenv-cli -e .env.test -- jest --passWithNoTests --testRegex \".*\\.spec\\.ts$\"",
    "test:int": "npx dotenv-cli -e .env.test -- jest --passWithNoTests --testRegex \".*\\.test\\.ts$\"",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:create": "npm run typeorm -- migration:create ./src/shared/infra/database/migrations/%npm_config_name%",
    "migration:generate": "npm run build & npm run typeorm -- -d ./src/shared/infra/database/data-source.ts migration:generate ./src/shared/infra/database/migrations/%npm_config_name%",
    "migration:run": "npm run build & npm run typeorm migration:run -- -d ./src/shared/infra/database/data-source.ts",
    "migration:revert": "npm run build & npm run typeorm -- -d ./src/shared/infra/database/data-source.ts migration:revert",
    "typeorm:local": "npx dotenv-cli -e .env.local -- ts-node ./node_modules/typeorm/cli",
    "migration:generate:local": "npm run build:local & npm run typeorm:local -- -d ./src/shared/infra/database/data-source.ts migration:generate ./src/shared/infra/database/migrations/%npm_config_name%",
    "migration:run:local": "npm run build:local & npm run typeorm:local migration:run -- -d ./src/shared/infra/database/data-source.ts",
    "migration:revert:local": "npm run build:local & npm run typeorm:local -- -d ./src/shared/infra/database/data-source.ts migration:revert",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.3.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
